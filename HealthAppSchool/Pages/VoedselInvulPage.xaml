<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthAppSchool.Pages.VoedselInvulPage"
             Title="VoedselInvulPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem 
            x:Name="NoodButton" Text="Noodknop" Clicked="NoodButton_Clicked" IconImageSource="redbutton.png"/>
        <ToolbarItem 
                x:Name="SettingsButton" Text="settings" Clicked="SettingsButton_Clicked"/>
    </ContentPage.ToolbarItems>
    
    
    <StackLayout Padding="10">
    <Entry x:Name="VoedselNaamEntry" Placeholder="Voer voedselnaam in" />
    <Entry x:Name="GewichtEntry" Placeholder="Voer gewicht in gram in" Keyboard="Numeric" />
    <Button Text="Opslaan" Clicked="OpslaanButton_Clicked" />
  </StackLayout>
    
    
</ContentPage>