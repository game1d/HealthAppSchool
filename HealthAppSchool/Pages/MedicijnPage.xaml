<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthAppSchool.Pages.MedicijnPage"
             Title="MedicijnPage">

    <VerticalStackLayout Padding="20" Spacing="20">
        <Label  Text="Welkom" x:Name="welkomText" HorizontalOptions="Center" FontSize="Header"/>
        <Button x:Name="bestelbtn" 
                Text="Medicijn Bestellen" 
                FontSize="Large" 
               Clicked="bestelbtn_Clicked" 
                />
        <Button x:Name="Medicijnplannerbtn" 
                Text="Medicijntijd Plannen" 
                FontSize="Large" 
              Clicked="Medicijnplannerbtn_Clicked"
                />
        </VerticalStackLayout>
</ContentPage>