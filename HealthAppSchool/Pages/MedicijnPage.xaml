<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthAppSchool.Pages.MedicijnPage"
             Title="MedicijnPage">
    <VerticalStackLayout>
        <Label Text="Medicijnoverzicht" HorizontalOptions="Center" FontSize="Large"/>
        <Label Text="Te bestellen Medicijnen via app" Padding="10"/>

        <ScrollView>
            <StackLayout>
                <Label Text="Lijst van Medicijn" HorizontalOptions="Center"/>
                <ListView x:Name="LvMedicijn" ItemsSource="{Binding MedicijnNaam}" HasUnevenRows="True" ItemTapped="LvMedicijn_ItemTapped">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout Orientation="Horizontal" Padding="10">
                                    <Label Text="{Binding MedicijnNaam}"/>
                          
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>

        </ScrollView>
    </VerticalStackLayout>
</ContentPage>